<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="org.zerock.mapper.UserMapper">
  
	<!-- 회원가입 -->  
  	<insert id="userJoin">
  		insert into tbl_user values(#{userId}, #{userPw}, #{userName}, #{userMail}, #{userPhone},#{userAddr1}, #{userAddr2}, #{userAddr3}, now() ,null , 10000, 1000, 0)
  	</insert>
  	
  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  		select count(*) from tbl_user where userId = #{userId}
  	</select>
  	
  	<!-- 로그인 -->
  	<select id="userLogin" resultType="org.zerock.domain.UserVO">
  		select userId, userPw, userName, userMail, userAdmin, userPhone, money, point from tbl_user where userId = #{userId}
  	</select> 
  	
  	<!-- 회원 정보 -->
 	<select id="userDetail" resultType="org.zerock.domain.UserVO">
 		select * from tbl_user where userId = #{userId}
 	</select>
 	
 	<!-- 회원 정보 수정 -->
 	<update id="userUpdate">
 		update tbl_user set userId = #{userId}, userPw = #{userPw}, userName = #{userName}, userMail = #{userMail}, userPhone= #{userPhone}, updateDate = now() where userId = #{userId}
 	</update>
 	
 	<!-- 회원 탈퇴 -->
 	<delete id="userDelete" parameterType="String">
 		delete from tbl_user where userId = #{userId}
 	</delete>
 	
  </mapper>